# SEO and Performance Optimizations for Transferko

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# SEO friendly URLs and 404 handling
RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove trailing slash
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{THE_REQUEST} /+([^?\s]*?)/?(\?[^\s]*)?\s
RewriteRule ^(.*)$ /%1 [R=301,L]

# SEO friendly redirects for common misspellings
RewriteRule ^transferko/?$ / [R=301,L]
RewriteRule ^transfer-ko/?$ / [R=301,L]
RewriteRule ^aerodrom/?$ /#pricing [R=301,L]
RewriteRule ^cene/?$ /#pricing [R=301,L]
RewriteRule ^cenovnik/?$ /#pricing [R=301,L]
RewriteRule ^kontakt/?$ /#contact [R=301,L]

# Specific route redirects for SEO
RewriteRule ^beograd/?$ /transfer-novi-sad-aerodrom-beograd [R=301,L]
RewriteRule ^budimpesta/?$ /transfer-novi-sad-budimpesta [R=301,L]
RewriteRule ^zagreb/?$ /transfer-novi-sad-zagreb [R=301,L]
RewriteRule ^temisvar/?$ /transfer-novi-sad-temisvar [R=301,L]
RewriteRule ^nis/?$ /transfer-novi-sad-nis [R=301,L]
RewriteRule ^segedin/?$ /transfer-novi-sad-segedin [R=301,L]

# Handle all non-existing pages - redirect to homepage for SEO
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/$
RewriteCond %{REQUEST_URI} !^/index\.html$
RewriteCond %{REQUEST_URI} !^/#
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|svg|webp|ico|pdf|xml|txt)$
RewriteRule ^(.*)$ / [R=301,L]

# Prevent access to sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Custom error pages
ErrorDocument 404 /
ErrorDocument 403 /
ErrorDocument 500 /